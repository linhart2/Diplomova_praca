<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Hejny,FMFI,Sumrectangle">
    <meta name="author" content="Daniel Linhart">
    <title>SumRectangle</title>
    <link href="{$basePath}/media/css/bootstrap.min.css" rel="stylesheet">
    <link href="{$basePath}/media/css/main.screen.css" rel="stylesheet">
    <link rel="stylesheet" href="{$basePath}/media/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800,300' rel='stylesheet' type='text/css'>
    <script src="{$basePath}/media/js/jquery.min.js"></script>
    <script src="{$basePath}/media/js/bootstrap.js"></script>
	{block head}{/block}
	<!--<script> document.body.className+=' js' </script> -->
</head>

<body>
    <header>
        {ifset #navigation}{include #navigation}{else}
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" n:href="Homepage:">SumRectangle</a>
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li><a n:href="Homepage:#tf-home">Home</a></li>
                            <li><a n:href="Homepage:#about">About</a></li>
                            <li><a n:href="Homepage:#download">Download</a></li>
                            <li><a n:href="Homepage:#learn">Learn more</a></li>
                            <li><a n:href="Homepage:#support">Support</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <!-- <li><a n:href="Register:register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li> -->
                            {if $user->loggedIn}
                                <li><a n:href="Application:app"><span class="glyphicon glyphicon-user"></span> Logged {$user->roles['first_name']} {$user->roles['last_name']}</a></li>
                                <li><a n:href="Sign:out"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                            {else}
                                <li><a n:href="Register:register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                                <li><a n:href="Sign:in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                            {/if}
                        </ul>
                    </div>
                </div>
            </nav>

        {/ifset}
    </header>
	<div style="position: absolute;top:50px;background-color: #1A7E1E;color: white;width: 100%;height: auto;text-align: center;font-size: 2em;" n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

    {include content}

    <footer>

    </footer>

	{block scripts}
	    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
	    <script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
        <script src="{$basePath}/media/js/jquery-ui.min.js"></script>
        <script src="https://www.gstatic.com/firebasejs/3.7.2/firebase.js"></script>
        <script src="{$basePath}/media/js/sumrectangle.js"></script>

	{/block}
</body>
</html>
